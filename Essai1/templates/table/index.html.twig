{% extends 'base.html.twig' %}

{% block title %}Hello TableController!
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
			color:{{ color }};
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>

	<div class="example-wrapper">
		<h1 align="center">Table de {{ calc_name }} par {{ n }}! ✅</h1>
		<ul>
			<table border="1" cellpadding="5" align="center" >
                <th>n</th>
                <th>m</th>
                <th>résultat</th>
				{% for calculation in calculations %}
					<tr>
						<td>={{ calculation.indice }}</td>
						<td> x </td> 
						<td>{{ n }}</td> 
                        <td> = </td>
                        <td>={{ calculation.result }}</td>
					</tr>
				{% endfor %}
			</table>
		</ul>
	</div>
{% endblock %}
